{
  "family": "linc-detector-api-task-definition",
  "requires_compatibilities": ["FARGATE"],
  "network_mode": "awsvpc",
  "cpu": 2048,
  "memory": 4096,
  "execution_role_arn": "${data.aws_iam_role.ecs_task_execution_role.arn}",
  "container_definitions": [
    {
      "name": "linc-detector-api-container",
      "image": "${aws_ecr_repository.linc_detector_api_repository.repository_url}:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ]
    }
  ]
}